<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <TextView
        android:layout_width="161dp"
        android:layout_height="61dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Home"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="105dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="Username"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="144dp" />

    <TextView
        android:id="@+id/points_no"
        android:layout_width="105dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="Points"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="219dp"
        tools:layout_editor_absoluteY="144dp" />

    <TextView
        android:id="@+id/Tasks_completed"
        android:layout_width="285dp"
        android:layout_height="47dp"
        android:gravity="center"
        android:text="no of tasks completed"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="253dp" />

    <TextView
        android:id="@+id/status_post"
        android:layout_width="294dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="Status of posted task"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="371dp" />

    <Button
        android:id="@+id/list_tasks"
        android:layout_width="134dp"
        android:layout_height="79dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="108dp"
        android:gravity="center"
        android:text="Go to tasks"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/post_tasks"
        android:layout_width="134dp"
        android:layout_height="79dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="108dp"
        android:gravity="center"
        android:text="Post task"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>